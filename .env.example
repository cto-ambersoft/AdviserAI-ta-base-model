# Where to store data/ and artifacts/ (defaults to repo root when unset)
MODEL_TECH_HOME=

## Auto-train at API startup (best-effort background jobs)
MODEL_TECH_AUTOTRAIN_ENABLED=1

# Comma-separated list; values are normalized to Binance symbols (BTC -> BTCUSDT)
MODEL_TECH_AUTOTRAIN_SYMBOLS=BTC,ETH,BNB,SOL,XRP,DOGE,LINK

# Parallel training jobs (ThreadPoolExecutor workers)
MODEL_TECH_AUTOTRAIN_MAX_WORKERS=2

# CatBoost threads per training job (controls CPU usage)
MODEL_TECH_AUTOTRAIN_CATBOOST_THREADS=2

# Training quality/speed preset
MODEL_TECH_AUTOTRAIN_MODE=fast
MODEL_TECH_AUTOTRAIN_N_FOLDS=3

# Data backfill policy before training
MODEL_TECH_AUTOTRAIN_MIN_BARS=2200
MODEL_TECH_AUTOTRAIN_SINCE_DAYS=1095

# Idempotency controls
MODEL_TECH_AUTOTRAIN_SKIP_EXISTING=1
MODEL_TECH_AUTOTRAIN_FORCE=0


